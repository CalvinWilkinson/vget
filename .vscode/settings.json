{
    "cSpell.words": [
		"CICD",
		"codecov",
		"cref",
		"Kinson",
		"paramref",
		"pwsh",
		"runsettings",
		"softprops",
		"typeparam",
		"versionminer",
		"Xunit"
	],
    "dotnet.defaultSolution": "VersionMiner.sln",
	"[csharp]": {
		"editor.insertSpaces": false,
		"editor.indentSize": 4,
	},
	"[jsonc]": {
		"editor.insertSpaces": false,
        "editor.indentSize": 4,
    },
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
    },
	"editor.detectIndentation": false,
	"[github-actions-workflow]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
}
